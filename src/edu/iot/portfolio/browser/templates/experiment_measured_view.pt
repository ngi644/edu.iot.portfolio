<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">

<body>


<metal:style fill-slot="style_slot">

    <style>

        #visualization {
          width: 100%;
          height: 670px;
        }

        #viz_table {
            width: 100%;
            display: block;
        }

        #png {
          margin: 1vw;
        }

        .comment-card{
            width: calc(100vw/4);
            min-height: 10vh;
            float: left;
            background-color: #f5f1f0;
            border-radius: 0.5vw;
            border: #252e7a 0.1vw solid;
            margin: 0.5vw 0.5vw 0 0;
        }

        .card-head {
          text-align: center;
          font-size: 0.8em;
          padding: 0.5vh 0.5vh 1vh 0.5vh;
          font-weight: 800;
          display: block;
          width: 100%;
          height: 1.5em;
        }
        .card-body {
          padding: 0.8vh;
          text-align: left;
          font-size: 1em;
          line-height: 1.5;
          display: block;
          width: 100%;
        }

      .js-plotly-plot .plotly .modebar-btn{
        font-size: 26px !important;
      }


    </style>


</metal:style>

<metal:scripts fill-slot="javascript_head_slot"
	tal:define="navroot context/@@plone_portal_state/navigation_root_url">

    <script>
        require = undefined;
        define = undefined;
    </script>

    <div tal:replace="structure view/get_dataset"><!----></div>

    <script src="https://cdn.plot.ly/plotly-latest.min.js"></script>

    <script type="text/javascript">


      function plotGraph(){

        var data = JSON.parse(data_json);

        var layout = {
          title: '${context/title}: ${view/get_experimental_title} ${view/get_group_title}',
          showlegend: true,
          dragmode: 'pan',
          margin: {
            pad:20
          },
          xaxis: {
            title:'時間(分)',
            autotick: true,
            ticks: 'outside',
            tick0: 0,
            dtick: 1
          },
          yaxis: {
            title: '温度(℃)',
            autotick: false,
            ticks: 'outside',
            range: [0, 120],
            tick0: 0,
            dtick: 20
          }
        };

        var option = {
          modeBarButtonsToRemove: ['sendDataToCloud', 'toImage', 'zoom2d', 'pan2d',
            'autoScale2d', 'lasso2d', 'select2d',
            'toggleSpikelines', 'hoverClosestCartesian', 'hoverCompareCartesian'],
          displaylogo: false
        };

        Plotly.newPlot('visualization', data, layout, option);

      }

      window.onload = function(){
        plotGraph();
      };

    </script>

    <script src="https://use.fontawesome.com/539b5348b3.js"></script>

</metal:scripts>

<metal:override fill-slot="top_slot"
    tal:define="disable_column_one python:request.set('disable_plone.leftcolumn',1);
                disable_column_two python:request.set('disable_plone.rightcolumn',1);"/>

<metal:content-core fill-slot="content-core">
<metal:main_macro define-macro="content-core">



    <div class="row" style="margin-bottom: 0.5em;">
        <div class="col-xs-4">
          <a tal:attributes="href context/absolute_url"><i class="fa fa-arrow-left" aria-hidden="true"></i>実験Top</a>
        </div>
        <div class="col-xs-8">
            <a class="plone-btn plone-btn-primary" href=""
              tal:attributes="href string:${context/absolute_url}/measured_view?e=${view/get_experimental_title}"
              tal:condition="view/get_experimental_title">
              <i class="fa fa-arrow-right" aria-hidden="true"></i>${view/get_experimental_title}の全班
            </a>
          <a class="plone-btn plone-btn-primary" href=""
              tal:attributes="href string:${context/absolute_url}/measured_view"
            tal:condition="not:view/get_experimental_title">
              <i class="fa fa-arrow-right" aria-hidden="true"></i>全ての実験
          </a>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12">
            <div id="visualization"></div>
            <div id="viz_table">
              <tal:cards  tal:repeat="comment view/get_comments" >
              <div class="comment-card" tal:condition="python:comment['memo']">
                <div class="card-head" tal:content="python:comment['title']"></div>
                <div class="card-body" tal:content="python:comment['memo']"></div>
              </div>
              </tal:cards>
            </div>
        </div>
    </div>
    <div class="visualClear"><!-- --></div>

    <span tal:replace="structure context/@@authenticator/authenticator"/>


</metal:main_macro>
</metal:content-core>

</body>
</html>
